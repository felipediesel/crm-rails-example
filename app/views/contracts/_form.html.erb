<% form_for(@contract) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :started_at %><br />
    <%= f.datetime_select :started_at %>
  </p>
  <p>
    <%= f.label :ended_at %><br />
    <%= f.datetime_select :ended_at %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :leader %><br />
    <%= f.select :leader_id, @leaders, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= f.select :project_id, @projects, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.submit @contract.new_record? ? "Create" : "Update" %>
  </p>
<% end %>
